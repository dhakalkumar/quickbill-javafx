<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="261.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.AdminLoginController">
   <children>
      <Label layoutX="132.0" layoutY="25.0" prefHeight="27.0" prefWidth="136.0" text="Please log in below" />
      <Label layoutX="46.0" layoutY="88.0" text="Username:" />
      <Label layoutX="46.0" layoutY="129.0" text="Password:" />
      <TextField fx:id="username" layoutX="145.0" layoutY="83.0" prefHeight="26.0" prefWidth="210.0" />
      <PasswordField fx:id="password" layoutX="145.0" layoutY="132.0" prefHeight="26.0" prefWidth="210.0" />
      <HBox layoutX="113.0" layoutY="184.0" spacing="50.0">
         <children>
            <Button fx:id="login" mnemonicParsing="false" onAction="#loginBtnHandler" text="Log in" />
            <Button mnemonicParsing="false" onAction="#cancelBtnHandler" text="Cancel" />
         </children>
      </HBox>
      <Label layoutX="75.0" layoutY="239.0" text="Don't have an account?" />
      <Hyperlink fx:id="link" layoutX="228.0" layoutY="235.0" onAction="#registerLinkHandler" text="Register here" />
      
   </children>
</AnchorPane>
